swagger: '2.0'
info:
  title: Simple API overview
  description: |-
    this is a simple resource
       designed to show the potential 
  version: 0.0.1
host: liveramp.net
basePath: /singleton
schemes:
  - http
  - https
tags:
  - name: Resource
  - name: Resource / Metadata
paths:
  /v1/resource:
    get:
      tags:
        - Resource
      operationId: retrieveResource
      responses:
        '200':
          description: Resource retrieved successfully
          schema:
            $ref: '#/definitions/ResourceOutput'
        default:
          description: Error retrieving Resource
          schema:
            $ref: '#/definitions/ErrorBody'
    put:
      tags:
        - Resource
      operationId: modifyResource
      responses:
        '200':
          description: Resource modified successfully
          schema:
            $ref: '#/definitions/ResourceInput'
        default:
          description: Error modifying Resource
          schema:
            $ref: '#/definitions/ErrorBody'
  '/v1/resources/{parentId}/metadata':
    get:
      tags:
        - Resource / Metadata
      operationId: retrieveMetadata
      responses:
        '200':
          description: Metadata retrieved successfully
          schema:
            $ref: '#/definitions/MetadataOutput'
        default:
          description: Error retrieving Metadata
          schema:
            $ref: '#/definitions/ErrorBody'
      parameters:
        - in: path
          name: parentId
          description: Id of parent Resource
          required: true
          type: integer
          format: int32
    put:
      tags:
        - Resource / Metadata
      operationId: modifyMetadata
      responses:
        '200':
          description: Metadata modified successfully
          schema:
            $ref: '#/definitions/MetadataInput'
        default:
          description: Error modifying Metadata
          schema:
            $ref: '#/definitions/ErrorBody'
      parameters:
        - in: path
          name: parentId
          description: Id of parent Resource
          required: true
          type: integer
          format: int32
definitions:
  ResourceInput:
    type: object
    properties:
      name:
        type: string
  ResourceOutput:
    type: object
    properties:
      id:
        type: integer
        format: int32
      name:
        type: string
  MetadataInput:
    type: object
    properties:
      info:
        type: string
  MetadataOutput:
    type: object
    properties:
      id:
        type: integer
        format: int32
      info:
        type: string
  ErrorBody:
    type: object
    properties:
      http-status:
        type: number
        description: The integer HTTP error status code for this problem
      error-code:
        type: string
        description: 'Service specific error code, more granular'
      message:
        type: string
        description: 'General, human readable error message'
      detail:
        type: string
        description: Human readable message specific to this occurrence
      path:
        type: string
        description: The request field that the error is about
