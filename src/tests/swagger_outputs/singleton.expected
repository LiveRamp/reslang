openapi: 3.0.1
info:
  title: An API with a singleton asset resource
  description: This is the description of the API
  version: 0.1.2
servers:
  - url: 'https://api.liveramp.com/singleton'
tags:
  - name: Resource
  - name: Resource / Metadata
paths:
  /v1/resource:
    get:
      tags:
        - Resource
      operationId: retrieveResource
      responses:
        '200':
          description: Resource retrieved successfully
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ResourceOutput'
    put:
      tags:
        - Resource
      operationId: modifyResource
      responses:
        '200':
          description: Resource modified successfully
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ResourceInput'
  '/v1/resource/{parentId}/metadata':
    get:
      tags:
        - Resource / Metadata
      operationId: retrieveResource--Metadata
      responses:
        '200':
          description: Metadata retrieved successfully
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Resource--MetadataOutput'
      parameters:
        - in: path
          name: parentId
          description: Id of parent Resource
          required: true
          schema:
            type: integer
            format: int32
    put:
      tags:
        - Resource / Metadata
      operationId: modifyResource--Metadata
      responses:
        '200':
          description: Metadata modified successfully
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Resource--MetadataInput'
      parameters:
        - in: path
          name: parentId
          description: Id of parent Resource
          required: true
          schema:
            type: integer
            format: int32
components:
  parameters: {}
  schemas:
    ResourceInput:
      type: object
      properties:
        name:
          type: string
    ResourceOutput:
      type: object
      properties:
        id:
          type: integer
          format: int32
        name:
          type: string
    Resource--MetadataInput:
      type: object
      properties:
        info:
          type: string
    Resource--MetadataOutput:
      type: object
      properties:
        id:
          type: integer
          format: int32
        info:
          type: string
    ErrorBody:
      type: object
      properties:
        http-status:
          type: number
          description: The integer HTTP error status code for this problem
        error-code:
          type: string
          description: 'Service specific error code, more granular'
        message:
          type: string
          description: 'General, human readable error message'
        detail:
          type: string
          description: Human readable message specific to this occurrence
        path:
          type: string
          description: The request field that the error is about

