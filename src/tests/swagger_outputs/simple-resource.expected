openapi: 3.0.1
info:
  title: A simple resource API
  description: This is the description of the API
  version: 0.1.2
servers:
  - url: 'https://api.liveramp.com/simple-resource'
tags:
  - name: Garage
    description: This is a description of a garage
paths:
  /v1/garages:
    post:
      tags:
        - Garage
      operationId: createGarage
      description: Actual POST comment
      requestBody:
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/GarageInput'
      responses:
        '201':
          description: Garage created successfully
          content:
            application/json:
              schema:
                type: object
                properties:
                  id:
                    type: string
    get:
      tags:
        - Garage
      operationId: multigetGarage
      parameters:
        - in: query
          name: id
          required: false
          schema:
            type: string
        - in: query
          name: name
          required: false
          schema:
            type: string
        - in: query
          name: offset
          description: Offset of the record (starting from 0) to include in the response.
          schema:
            type: integer
            format: int32
        - in: query
          name: limit
          description: >-
            Number of records to return. If unspecified, 10 records will be
            returned. Maximum value for limit can be 100
          schema:
            type: integer
            format: int32
      responses:
        '200':
          description: Garages retrieved successfully
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/GarageMultiResponse'
  '/v1/garages/{id}':
    get:
      tags:
        - Garage
      operationId: retrieveGarage
      responses:
        '200':
          description: Garage retrieved successfully
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/GarageOutput'
      parameters:
        - in: path
          name: id
          required: true
          schema:
            type: string
    put:
      tags:
        - Garage
      operationId: modifyGarage
      description: Actual PUT comment
      responses:
        '200':
          description: Garage modified successfully
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/GarageInput'
      parameters:
        - in: path
          name: id
          required: true
          schema:
            type: string
    delete:
      tags:
        - Garage
      operationId: deleteGarage
      responses:
        '200':
          description: Garage deleted successfully
      parameters:
        - in: path
          name: id
          required: true
          schema:
            type: string
components:
  parameters: {}
  schemas:
    GarageInput:
      type: object
      properties:
        name:
          type: string
        manufacturer:
          $ref: '#/components/schemas/ManufacturerStructure'
    GarageOutput:
      type: object
      properties:
        id:
          type: string
        name:
          type: string
        manufacturer:
          $ref: '#/components/schemas/ManufacturerStructure'
    GarageMultiResponse:
      type: object
      properties:
        elements:
          description: Array of retrieved Garages
          type: array
          items:
            $ref: '#/components/schemas/GarageOutput'
    ManufacturerStructure:
      type: object
      properties:
        company:
          type: string
    StandardErrorStructure:
      description: 'Error details, only available if there was an issue in processing'
      type: object
      properties:
        httpStatusCode:
          type: number
          description: The integer HTTP error status code for this problem
        errorCode:
          type: string
          description: ' Optional, more granular error code for this problem'
        message:
          type: string
          description: Human readable error message

