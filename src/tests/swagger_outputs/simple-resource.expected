openapi: 3.0.1
info:
  title: A simple resource API
  description: This is the description of the API
  version: 0.1.2
servers:
  - url: 'https://api.liveramp.com/simple-resource'
tags:
  - name: Garage
    description: This is a description of a garage
paths:
  /v1/garages:
    post:
      tags:
        - Garage
      operationId: createGarage
      description: Actual POST comment
      requestBody:
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/GarageInput'
      responses:
        '201':
          description: Garage created successfully
          content:
            application/json:
              schema:
                type: object
                properties:
                  id:
                    in: path
                    name: id
                    required: true
                    schema:
                      type: string
    get:
      tags:
        - Garage
      operationId: multigetGarage
      parameters:
        - in: query
          name: id
          required: false
          schema:
            type: string
        - in: query
          name: name
          required: false
          schema:
            type: string
      responses:
        '200':
          description: Garages retrieved successfully
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/GarageMultiResponse'
  '/v1/garages/{id}':
    get:
      tags:
        - Garage
      operationId: retrieveGarage
      responses:
        '200':
          description: Garage retrieved successfully
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/GarageOutput'
      parameters:
        - in: path
          name: id
          required: true
          schema:
            type: string
    put:
      tags:
        - Garage
      operationId: modifyGarage
      description: Actual PUT comment
      responses:
        '200':
          description: Garage modified successfully
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/GarageInput'
      parameters:
        - in: path
          name: id
          required: true
          schema:
            type: string
    delete:
      tags:
        - Garage
      operationId: deleteGarage
      responses:
        '200':
          description: Garage deleted successfully
      parameters:
        - in: path
          name: id
          required: true
          schema:
            type: string
components:
  parameters: {}
  schemas:
    GarageInput:
      type: object
      properties:
        name:
          type: string
        manufacturer:
          $ref: '#/components/schemas/ManufacturerStructure'
    GarageOutput:
      type: object
      properties:
        id:
          type: string
        name:
          type: string
        manufacturer:
          $ref: '#/components/schemas/ManufacturerStructure'
    GarageMultiResponse:
      type: object
      properties:
        page:
          description: 'Page offset, starting from 1'
          type: integer
          format: int32
        page-size:
          description: Size of returned page
          type: integer
          format: int32
        elements:
          description: Array of retrieved Garages
          type: array
          items:
            $ref: '#/components/schemas/GarageOutput'
    ManufacturerStructure:
      type: object
      properties:
        company:
          type: string
    ErrorBody:
      type: object
      properties:
        http-status:
          type: number
          description: The integer HTTP error status code for this problem
        error-code:
          type: string
          description: 'Service specific error code, more granular'
        message:
          type: string
          description: 'General, human readable error message'
        detail:
          type: string
          description: Human readable message specific to this occurrence
        path:
          type: string
          description: The request field that the error is about

