swagger: '2.0'
info:
  title: A simple resource API
  description: This is the description of the API
  version: 0.1.2
host: liveramp.net
basePath: /A simple resource API
schemes:
  - http
  - https
tags:
  - name: Garage
    description: This is a description of a garage
paths:
  /v1/garages:
    post:
      tags:
        - Garage
      operationId: createGarage
      description: Actual POST comment
      parameters:
        - in: body
          name: GarageInput
          required: true
          schema:
            $ref: '#/definitions/GarageInput'
      responses:
        '200':
          description: Garage created successfully
        default:
          description: Error creating Garage
          schema:
            $ref: '#/definitions/ErrorBody'
    get:
      tags:
        - Garage
      operationId: multigetGarage
      parameters:
        - in: query
          name: id
          required: false
          type: string
        - in: query
          name: name
          required: false
          type: string
      responses:
        '200':
          description: Garages retrieved successfully
          schema:
            $ref: '#/definitions/GarageMultiResponse'
        default:
          description: Error retrieving Garages
          schema:
            $ref: '#/definitions/ErrorBody'
  '/v1/garages/{id}':
    get:
      tags:
        - Garage
      operationId: retrieveGarage
      responses:
        '200':
          description: Garage retrieved successfully
          schema:
            $ref: '#/definitions/GarageOutput'
        default:
          description: Error retrieving Garage
          schema:
            $ref: '#/definitions/ErrorBody'
      parameters:
        - in: path
          name: id
          required: true
          type: string
    put:
      tags:
        - Garage
      operationId: modifyGarage
      description: Actual PUT comment
      responses:
        '200':
          description: Garage modified successfully
          schema:
            $ref: '#/definitions/GarageInput'
        default:
          description: Error modifying Garage
          schema:
            $ref: '#/definitions/ErrorBody'
      parameters:
        - in: path
          name: id
          required: true
          type: string
    delete:
      tags:
        - Garage
      operationId: deleteGarage
      responses:
        '200':
          description: Garage deleted successfully
        default:
          description: Error deleting Garage
          schema:
            $ref: '#/definitions/ErrorBody'
      parameters:
        - in: path
          name: id
          required: true
          type: string
definitions:
  GarageInput:
    type: object
    properties:
      name:
        type: string
      manufacturer:
        $ref: '#/definitions/ManufacturerStructure'
  GarageOutput:
    type: object
    properties:
      id:
        type: string
      name:
        type: string
      manufacturer:
        $ref: '#/definitions/ManufacturerStructure'
  GarageMultiResponse:
    type: object
    properties:
      page:
        description: 'Page offset, starting from 1'
        type: integer
        format: int32
      page-size:
        description: Size of returned page
        type: integer
        format: int32
      elements:
        description: Array of retrieved Garages
        type: array
        items:
          $ref: '#/definitions/GarageOutput'
  ManufacturerStructure:
    type: object
    properties:
      company:
        type: string
  ErrorBody:
    type: object
    properties:
      http-status:
        type: number
        description: The integer HTTP error status code for this problem
      error-code:
        type: string
        description: 'Service specific error code, more granular'
      message:
        type: string
        description: 'General, human readable error message'
      detail:
        type: string
        description: Human readable message specific to this occurrence
      path:
        type: string
        description: The request field that the error is about

