asyncapi: 2.0.0
info:
  title: Simple events
  description: API for simple events
  version: 0.0.1
servers:
  production:
    url: 'pubsub.liveramp.com:{port}'
    protocol: Google Cloud Pub/Sub
    description: LiveRamp Production pubsub instance
    variables:
      port:
        description: Secure connection (TLS) is available through port 8883
        default: '1883'
defaultContentType: application/json
channels:
  topics/andrew-simple-example_v1-simple-resource:
    description: A simple REST resource
    subscribe:
      summary: 'REST: SimpleResource'
      operationId: SimpleResource
      message:
        $ref: '#/components/messages/SimpleResource'
  topics/andrew-simple-example_v2-test-resource:
    description: A test REST resource
    subscribe:
      summary: 'REST: v2/TestResource'
      operationId: v2/TestResource
      message:
        $ref: '#/components/messages/v2TestResource'
  topics/andrew-simple-example_v2-test-resource-foo:
    description: A REST subresource
    subscribe:
      summary: 'REST: v2/TestResource::Foo'
      operationId: 'v2/TestResource::Foo'
      message:
        $ref: '#/components/messages/v2TestResourceFoo'
  topics/eventing_v1-start-signal:
    description: Event to start
    subscribe:
      summary: 'Adhoc: StartSignal'
      operationId: StartSignal
      message:
        $ref: '#/components/messages/StartSignal'
  topics/eventing_v3-stop-signal:
    description: Event to stop
    publish:
      summary: 'Adhoc: v3/StopSignal'
      operationId: v3/StopSignal
      message:
        $ref: '#/components/messages/v3StopSignal'
components:
  messages:
    SimpleResource:
      name: SimpleResource
      title: SimpleResource
      summary: A simple REST resource
      contentType: application/json
      traits:
        - $ref: '#/components/messageTraits/RestHeader'
      payload:
        $ref: '#/components/schemas/SimpleResourceOutput'
    v2TestResource:
      name: v2TestResource
      title: v2TestResource
      summary: A test REST resource
      contentType: application/json
      traits:
        - $ref: '#/components/messageTraits/RestHeader'
      payload:
        $ref: '#/components/schemas/v2TestResourceOutput'
    v2TestResourceFoo:
      name: v2TestResourceFoo
      title: v2TestResourceFoo
      summary: A REST subresource
      contentType: application/json
      traits:
        - $ref: '#/components/messageTraits/RestHeader'
      payload:
        $ref: '#/components/schemas/v2TestResourceFooOutput'
    StartSignal:
      name: StartSignal
      title: StartSignal
      summary: Event to start
      contentType: application/json
      traits:
        - $ref: '#/components/messageTraits/StartSignalHeader'
      payload:
        $ref: '#/components/schemas/StartSignal'
    v3StopSignal:
      name: v3StopSignal
      title: v3StopSignal
      summary: Event to stop
      contentType: application/json
      traits:
        - $ref: '#/components/messageTraits/v3StopSignalHeader'
      payload:
        $ref: '#/components/schemas/v3StopSignal'
  schemas:
    SimpleResourceOutput:
      type: object
      properties:
        id:
          type: string
        name:
          type: string
      required:
        - id
        - name
      description: A simple REST resource
    v2TestResourceOutput:
      type: object
      properties:
        id:
          type: integer
          format: int32
        name:
          type: string
        number:
          type: integer
          format: int32
      required:
        - id
        - name
      description: A test REST resource
    v2TestResourceFooOutput:
      type: object
      properties:
        id:
          type: integer
          format: int32
        address:
          items:
            type: string
          type: array
      required:
        - id
        - address
      description: A REST subresource
    v2TestResourceFoo2Output:
      type: object
      properties:
        id:
          type: integer
          format: int32
        address:
          items:
            type: string
          type: array
      required:
        - id
        - address
    StartSignalHeader:
      type: object
      properties:
        name:
          type: string
          minLength: 10
          maxLength: 100
        time:
          type: string
          format: ISO8601 UTC date-time
          example: '2019-04-13T03:35:34Z'
      required:
        - name
        - time
      description: Event to start
    StartSignal:
      type: object
      properties:
        name:
          type: string
        address:
          items:
            type: string
          minItems: 1
          maxItems: 10
          type: array
        foo:
          allOf:
            - $ref: '#/components/schemas/v2TestResourceFoo2Output'
      required:
        - name
        - address
        - foo
      description: Event to start
    v3StopSignalHeader:
      type: object
      properties:
        a:
          type: integer
          format: int32
        b:
          type: integer
          format: int64
      required:
        - a
        - b
      description: Event to stop
    v3StopSignal:
      type: object
      properties:
        stopped:
          type: string
          format: ISO8601 UTC date-time
          example: '2019-04-13T03:35:34Z'
      required:
        - stopped
      description: Event to stop
    VerbEnum:
      type: string
      enum:
        - POST
        - PUT
        - PATCH
        - GET
        - MULTIGET
        - DELETE
  messageTraits:
    RestHeader:
      headers:
        type: object
        properties:
          verb:
            description: ''
            $ref: '#/components/schemas/VerbEnum'
          location:
            description: ''
            type: string
            format: url
            example: 'https://www.domain.com (url)'
          ids:
            description: ''
            items:
              type: string
            type: array
        required:
          - verb
          - location
          - ids
    StartSignalHeader:
      headers:
        type: object
        properties:
          name:
            type: string
            minLength: 10
            maxLength: 100
          time:
            type: string
            format: ISO8601 UTC date-time
            example: '2019-04-13T03:35:34Z'
        required:
          - name
          - time
        description: Event to start
    v3StopSignalHeader:
      headers:
        type: object
        properties:
          a:
            type: integer
            format: int32
          b:
            type: integer
            format: int64
        required:
          - a
          - b
        description: Event to stop
