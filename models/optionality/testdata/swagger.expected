openapi: 3.0.1
info:
  title: Optionality
  description: Optionality test
  version: 0.0.1
servers:
  - description: ''
    url: 'https://api.liveramp.com/optionality'
tags:
  - name: Car
    description: (configuration)  A Car Garage
paths:
  /v1/cars:
    post:
      tags:
        - Car
      operationId: Create Car
      description: Create a car
      requestBody:
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/CarInput'
      responses:
        '201':
          description: Car created successfully
          content:
            application/json:
              schema:
                type: object
                properties:
                  id:
                    type: string
  '/v1/cars/{id}':
    get:
      tags:
        - Car
      operationId: Get Car
      description: Get a single car
      responses:
        '200':
          description: Car retrieved successfully
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/CarOutput'
        '404':
          description: Car not found
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/StandardError'
      parameters:
        - in: path
          name: id
          required: true
          schema:
            type: string
    put:
      tags:
        - Car
      operationId: Modify Car
      description: Update a car
      requestBody:
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/CarPuttable'
      responses:
        '200':
          description: Car modified successfully
        '404':
          description: Car not found
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/StandardError'
      parameters:
        - in: path
          name: id
          required: true
          schema:
            type: string
    patch:
      tags:
        - Car
      operationId: Patch Car
      description: Patch a car
      requestBody:
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/CarPatchable'
      responses:
        '200':
          description: Car patched successfully
        '404':
          description: Car not found
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/StandardError'
      parameters:
        - in: path
          name: id
          required: true
          schema:
            type: string
components:
  parameters: {}
  schemas:
    CarInput:
      type: object
      properties:
        make:
          type: string
        nitro:
          type: string
        location:
          type: string
      required:
        - make
        - location
      description: A Car Garage
    CarOutput:
      type: object
      properties:
        id:
          type: string
        make:
          type: string
        nitro:
          type: string
        created:
          type: string
          format: ISO8601 UTC date-time
          example: '2019-04-13T03:35:34Z'
        location:
          type: string
      required:
        - id
        - make
        - nitro
        - created
        - location
      description: A Car Garage
    CarPuttable:
      type: object
      properties:
        nitro:
          type: string
        location:
          type: string
      required:
        - nitro
      description: A Car Garage
    CarPatchable:
      type: object
      properties:
        nitro:
          type: string
        location:
          type: string
      description: A Car Garage
    StandardError:
      type: object
      properties:
        httpStatus:
          description: HTTP error status code for this problem
          type: integer
          format: int32
        errorCode:
          description: 'Service specific error code, more granular'
          type: string
        message:
          description: 'General, human readable error message'
          type: string
      required:
        - httpStatus
        - errorCode
        - message

