openapi: 3.0.1
info:
  title: Data buyer API
  description: Data buyer API
  version: 0.0.1
servers:
  - url: 'https://api.liveramp.com/databuyer'
tags:
  - name: DeliverPurchasedSegments
    description: '(request)  '
  - name: Bulk search DeliverPurchasedSegments
    description: '(bulk sync action)  '
  - name: Bulk search Segment
    description: '(bulk sync action)  '
  - name: AllDeliveredSegments
    description: '(resource)  '
paths:
  /v1/deliver-purchased-segments:
    post:
      tags:
        - DeliverPurchasedSegments
      operationId: Create DeliverPurchasedSegments
      description: ''
      requestBody:
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/DeliverPurchasedSegmentsInput'
      responses:
        '201':
          description: DeliverPurchasedSegments created successfully
          content:
            application/json:
              schema:
                type: object
                properties:
                  id:
                    type: string
    get:
      tags:
        - DeliverPurchasedSegments
      operationId: Get multiple DeliverPurchasedSegments
      description: ''
      responses:
        '200':
          description: DeliverPurchasedSegments retrieved successfully
          headers:
            X-Total-Count:
              description: Total number of DeliverPurchasedSegments returned by the query
              schema:
                type: integer
                format: int32
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/DeliverPurchasedSegmentsMultiResponse'
      parameters:
        - in: query
          name: offset
          description: >-
            Offset of the DeliverPurchasedSegments (starting from 0) to include
            in the response.
          schema:
            type: integer
            format: int32
            default: 0
            minimum: 0
        - in: query
          name: limit
          description: >-
            Number of DeliverPurchasedSegments to return. If unspecified, 10 max
            will be returned. Maximum value for limit can be 100
          schema:
            type: integer
            format: int32
            default: 10
            minimum: 1
            maximum: 100
        - in: query
          name: id
          required: false
          schema:
            type: string
  '/v1/deliver-purchased-segments/{id}':
    get:
      tags:
        - DeliverPurchasedSegments
      operationId: Get DeliverPurchasedSegments
      description: ''
      responses:
        '200':
          description: DeliverPurchasedSegments retrieved successfully
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/DeliverPurchasedSegmentsOutput'
        '404':
          description: DeliverPurchasedSegments not found
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/StandardError'
      parameters:
        - in: path
          name: id
          required: true
          schema:
            type: string
  /v1/deliver-purchased-segments/actions/search:
    get:
      tags:
        - Bulk search DeliverPurchasedSegments
      operationId: 'Get Bulk DeliverPurchasedSegments::searches'
      description: ''
      responses:
        '200':
          description: searches retrieved successfully
          headers:
            X-Total-Count:
              description: Total number of searches returned by the query
              schema:
                type: integer
                format: int32
          content:
            application/json:
              schema:
                $ref: >-
                  #/components/schemas/BulksearchDeliverPurchasedSegmentsMultiResponse
      parameters:
        - in: query
          name: offset
          description: Offset of the searches (starting from 0) to include in the response.
          schema:
            type: integer
            format: int32
            default: 0
            minimum: 0
        - in: query
          name: limit
          description: >-
            Number of searches to return. If unspecified, 10 max will be
            returned. Maximum value for limit can be 100
          schema:
            type: integer
            format: int32
            default: 10
            minimum: 1
            maximum: 100
        - in: query
          name: name
          required: false
          schema:
            type: string
  /v1/segments/actions/search:
    get:
      tags:
        - Bulk search Segment
      operationId: 'Get Bulk Segment::searches'
      description: ''
      responses:
        '200':
          description: searches retrieved successfully
          headers:
            X-Total-Count:
              description: Total number of searches returned by the query
              schema:
                type: integer
                format: int32
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/BulksearchSegmentMultiResponse'
      parameters:
        - in: query
          name: offset
          description: Offset of the searches (starting from 0) to include in the response.
          schema:
            type: integer
            format: int32
            default: 0
            minimum: 0
        - in: query
          name: limit
          description: >-
            Number of searches to return. If unspecified, 10 max will be
            returned. Maximum value for limit can be 100
          schema:
            type: integer
            format: int32
            default: 10
            minimum: 1
            maximum: 100
        - in: query
          name: name
          required: false
          schema:
            type: string
  /v1/all-delivered-segments:
    get:
      tags:
        - AllDeliveredSegments
      operationId: Get AllDeliveredSegments
      description: ''
      responses:
        '200':
          description: AllDeliveredSegments retrieved successfully
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/AllDeliveredSegmentsOutput'
        '404':
          description: AllDeliveredSegments not found
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/StandardError'
components:
  parameters: {}
  schemas:
    DeliverPurchasedSegmentsInput:
      type: object
      properties:
        segmentsToDelivers:
          items:
            type: string
            example: Link to Segment resource via its id
          type: array
        whereToDeliver:
          type: string
          example: Link to Destination resource via its id
        complete:
          type: boolean
      required:
        - segmentsToDeliver
        - whereToDeliver
        - complete
    DeliverPurchasedSegmentsOutput:
      type: object
      properties:
        id:
          type: string
        segmentsToDelivers:
          items:
            type: string
            example: Link to Segment resource via its id
          type: array
        whereToDeliver:
          type: string
          example: Link to Destination resource via its id
        segmentStatuses:
          items:
            allOf:
              - $ref: '#/components/schemas/DeliveryStatus'
            type: object
          type: array
        complete:
          type: boolean
      required:
        - id
        - segmentsToDeliver
        - whereToDeliver
        - segmentStatuses
        - complete
    DeliverPurchasedSegmentsMultiResponse:
      type: object
      properties:
        deliverPurchasedSegments:
          description: Array of retrieved DeliverPurchasedSegments
          type: array
          items:
            $ref: '#/components/schemas/DeliverPurchasedSegmentsOutput'
    BulksearchDeliverPurchasedSegmentsOutput:
      type: object
      properties:
        id:
          type: string
        name:
          type: string
      required:
        - id
        - name
    BulksearchDeliverPurchasedSegmentsMultiResponse:
      type: object
      properties:
        searches:
          description: 'Array of retrieved DeliverPurchasedSegments::searches'
          type: array
          items:
            $ref: '#/components/schemas/BulksearchDeliverPurchasedSegmentsOutput'
    BulksearchSegmentOutput:
      type: object
      properties:
        id:
          type: string
        name:
          type: string
      required:
        - id
        - name
    BulksearchSegmentMultiResponse:
      type: object
      properties:
        searches:
          description: 'Array of retrieved Segment::searches'
          type: array
          items:
            $ref: '#/components/schemas/BulksearchSegmentOutput'
    AllDeliveredSegmentsOutput:
      type: object
      properties:
        segmentStatuses:
          items:
            allOf:
              - $ref: '#/components/schemas/DeliveryStatus'
            type: object
          type: array
      required:
        - segmentStatuses
    DeliveryStatus:
      type: object
      properties:
        updated:
          type: string
          format: ISO8601 UTC date-time
          example: '2019-04-13T03:35:34Z'
        segment:
          type: string
          example: Link to Segment resource via its id
        status:
          allOf:
            - $ref: '#/components/schemas/DeliveryStatusEnum'
          type: string
      required:
        - updated
        - segment
        - status
    DeliveryStatusEnum:
      type: string
      enum:
        - PENDING
        - DELIVERED
        - ERROR
    StandardError:
      type: object
      properties:
        httpStatus:
          description: HTTP error status code for this problem
          type: integer
          format: int32
        errorCode:
          description: 'Service specific error code, more granular'
          type: string
        message:
          description: 'General, human readable error message'
          type: string
      required:
        - httpStatus
        - errorCode
        - message

